<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_layout"
    android:paddingRight="@dimen/margin_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.satra.traveler.MessagingActivity"
    tools:showIn="@layout/activity_messaging">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/themeBG"
            app:cardCornerRadius="@dimen/btn_small_padding">
            <EditText
                android:id="@+id/messageText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_message_white_24dp"
                android:drawableStart="@drawable/ic_message_white_24dp"
                android:hint="@string/votre_message"/>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_layout"
            android:src="@drawable/ic_send"
            app:backgroundTint="@android:color/holo_blue_light" />
    </LinearLayout>
</LinearLayout>
