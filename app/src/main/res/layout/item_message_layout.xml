<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardPreventCornerOverlap="false"
    android:layout_margin="@dimen/margin_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/balloon_incoming_normal"
        android:padding="@dimen/cardview_default_elevation">
        <TextView
            android:id="@+id/messageMatricule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/margin_layout"
            android:paddingRight="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:paddingStart="@dimen/text_padding"
            android:paddingEnd="@dimen/text_padding"
            android:ems="5"
            android:hint=""
            android:maxLines="1"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/messageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/margin_layout"
            android:ems="5"
            android:hint="@string/votre_message"
            android:textSize="@dimen/contetextsize"
            android:fontFamily="sans-serif-condensed"
            style="@style/chat_text_message_style" />
        <TextView
            android:id="@+id/messageDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:hint="date sent"
            android:singleLine="true"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/text_padding"
            android:layout_marginStart="@dimen/text_padding"
            android:layout_marginRight="@dimen/text_padding"
            android:layout_marginEnd="@dimen/text_padding"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/messageStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_done"
            android:drawableEnd="@drawable/ic_done"
            android:paddingLeft="@dimen/text_padding"
            android:paddingStart="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:paddingEnd="@dimen/text_padding"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:text="@string/message_not_received"/>

