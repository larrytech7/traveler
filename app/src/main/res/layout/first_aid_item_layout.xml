<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/fab_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/themeBG"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPaddingLeft="@dimen/card_elevation"
        card_view:contentPaddingRight="@dimen/card_elevation"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewStep1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/aid_height"
                card_view:srcCompat="@drawable/bg_gradient"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/imageViewStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/bg_gradient"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/imageViewStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/bg_gradient"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/step1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:textColor="@color/black"
                android:layout_margin="@dimen/textmargin"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>