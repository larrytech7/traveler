<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.satra.traveler.MainActivity"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


                <Spinner
                    android:id="@+id/type_of_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:entries="@array/problem_types"
                    android:prompt="@array/problem_types"
                    android:layout_alignTop="@+id/problem_preview"
                    android:layout_toLeftOf="@+id/problem_preview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/bus_immatriculation"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="@string/matriculation_number"
                    android:layout_toLeftOf="@+id/problem_preview"
                    android:layout_toStartOf="@+id/problem_preview"
                    android:layout_below="@+id/type_of_problem"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:id="@+id/problem_description"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:hint="@string/description"
                    android:inputType="textMultiLine"
                    android:visibility="invisible"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/problem_preview"
                    android:layout_toStartOf="@+id/problem_preview"
                    android:layout_below="@+id/bus_immatriculation"
                    android:layout_alignParentBottom="true" />

                <ImageButton
                    android:id="@+id/problem_preview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/problem_level"
                android:layout_toEndOf="@+id/problem_level" />

            <ImageButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_save"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/problem_preview"
                android:layout_alignParentRight="true" />

                <Spinner
                    android:id="@+id/problem_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/problem_level"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/problem_preview"
                    android:layout_toRightOf="@+id/problem_level_label"
                    android:layout_alignBottom="@+id/problem_level_label" />

                <TextView
                    android:id="@+id/problem_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/how1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>